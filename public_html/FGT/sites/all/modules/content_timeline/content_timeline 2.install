function add_custom_fields() {
  foreach (_content_timeline_installed_fields() as $field) {
    field_create_field($field);
  }
  foreach (_content_timeline_installed_instances() as $fieldinstance) {
    $fieldinstance['entity_type'] = 'node';
    $fieldinstance['bundle'] = 'timeline';
    field_create_instance($fieldinstance);
  }
}
/**
 * Create image styles.
 */
function _create_image_styles() {

  $style10 = image_style_save(array(
    'name' => 'timeline_item'));
  $style20 = image_style_save(array(
    'name' => 'timeline_item_open'));

  $effect10 = array(
    'name' => 'image_scale_and_crop',
    'data' => array(
      'width' => 240,
      'height' => 125),
    'isid' => $style10['isid']);

  $effect20 = array(
    'name' => 'image_scale_and_crop',
    'data' => array(
      'width' => 490,
      'height' => 155),
    'isid' => $style20['isid']);

  image_effect_save($effect10);
  image_effect_save($effect20);

}
function _delete_image_styles() {
  image_style_delete(image_style_load('timeline_item'));
  image_style_delete(image_style_load('timeline_item_open'));
}