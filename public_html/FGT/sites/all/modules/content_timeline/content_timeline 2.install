/**
 * Implements hook_install().
 */
function content_timeline_install() {
  node_types_rebuild();
  $types = node_type_get_types();
  //node_add_body_field($types['timeline']);
  add_custom_fields();
  _create_image_styles();
}
/**
 * Implements hook_uninstall().
 */
function content_timeline_uninstall() {
  $ournewtype = 'timeline';
  $sql = 'SELECT nid FROM {node} n WHERE n.type = :type';
  $result = db_query($sql, array(':type' => $ournewtype));
  $nodeids = array();
  foreach ($result as $row) {
    $nodeids[] = $row->nid;
  }
  node_delete_multiple($nodeids);
  //node_type_delete($ournewtype); //not needed when hook_node_info() is used
  delete_custom_fields();
  field_purge_batch(50);

  _delete_image_styles();
}
function delete_custom_fields() {
  foreach (array_keys(_content_timeline_installed_fields()) as $field) {
    field_delete_field($field);
  }
  $instances = field_info_instances('node', 'timeline');
  foreach ($instances as $instance_name => $fieldinstance) {
    field_delete_instance($fieldinstance);
  }
}
