 */
function uc_recurring_order_uc_cart_pane($items) {
  $panes[] = array(
    'id' => 'recurring',
    'body' => drupal_get_form('uc_recurring_order_pane_cart'),
    'title' => t('Recurring order'),
    'desc' => t("Allows shoppers to select to have their order automatically re-occur."),
